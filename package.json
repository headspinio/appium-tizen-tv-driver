{
  "name": "appium-tizen-tv-driver-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Tizen TV support for Appium",
  "keywords": [
    "appium",
    "tizen",
    "testing",
    "automation",
    "mobile",
    "mobile testing"
  ],
  "homepage": "https://github.com/headspinio/appium-tizen-tv-driver#readme",
  "bugs": {
    "url": "https://github.com/headspinio/appium-tizen-tv-driver/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/headspinio/appium-tizen-tv-driver.git"
  },
  "license": "Apache-2.0",
  "author": "Jonathan Lipps <jlipps@headspin.io>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install && npm run --workspaces prepare",
    "clean": "npm run --workspaces clean && npm ci",
    "test": "npm run --workspaces test",
    "dev": "run-p \"dev:*\"",
    "dev:distfiles": "lerna run --parallel --prefix --concurrency=8 dev",
    "dev:types": "tsc -b --watch",
    "build": "npm run --workspaces build"
  },
  "lint-staged": {
    "*.{md,yml}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "appium-tizen-tv-driver": "file:./packages/appium-tizen-tv-driver",
    "@headspinio/tizen-remote": "file:./packages/tizen-remote",
    "@headspinio/mock-tizen-ws-server": "file:./packages/mock-tizen-ws-server"
  },
  "devDependencies": {
    "@appium/eslint-config-appium": "6.0.2",
    "@babel/cli": "7.18.9",
    "@babel/core": "7.18.2",
    "@babel/plugin-transform-runtime": "7.18.2",
    "@babel/preset-env": "7.18.2",
    "@babel/register": "7.18.9",
    "@humanwhocodes/env": "2.2.0",
    "@types/bluebird": "3.5.36",
    "@types/debug": "4.1.7",
    "@types/lockfile": "1.0.2",
    "@types/mocha": "9.1.1",
    "@types/node": "18.6.1",
    "@types/sinon": "10.0.13",
    "@types/ws": "8.5.3",
    "appium": "^2.0.0-beta.43",
    "babel-plugin-source-map-support": "2.2.0",
    "cross-env": "7.0.3",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-promise": "6.0.0",
    "get-port": "5.1.1",
    "husky": "^8.0.1",
    "lerna": "^5.2.0",
    "lint-staged": "^13.0.3",
    "mocha": "10.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "^2.7.1",
    "rewiremock": "3.14.3",
    "sinon": "14.0.0",
    "strict-event-emitter-types": "2.0.0",
    "type-fest": "2.17.0",
    "typedoc": "0.23.9",
    "typedoc-plugin-markdown": "3.13.4",
    "typescript": "4.7.4",
    "unexpected": "13.0.0",
    "unexpected-eventemitter": "2.4.0",
    "unexpected-sinon": "11.1.0",
    "webdriverio": "7.20.9"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  }
}
